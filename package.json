		"gulp-notify": "^4.0.0",
		"gulp-plumber": "^1.2.1",
		"gulp-remember": "^1.0.1",
		"gulp-rename": "^2.0.0",
		"gulp-sass": "^5.1.0",
		"gulp-sourcemaps": "^3.0.0",
		"gulp-uglify": "^3.0.2",
		"husky": "^9.1.4",
		"lint-staged": "^15.2.8",
		"prettier": "3.3.3",
		"sass": "^1.69.7"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"**/*.{json,js}": [
			"eslint --fix --quiet"
		],
		"./assets/src/**/*.{json,js}": [
			"prettier --write"
		]
	}

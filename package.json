		"commitlint": "^19.4.0",
		"eslint": "8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"fancy-log": "^2.0.0",
		"gulp": "^4.0.2",
		"gulp-autoprefixer": "^9.0.0",
		"gulp-babel": "^8.0.0",

		"lint:fix": "eslint assets/src/js/**/*.js --fix",
		"prepare": "husky"
	},
	"dependencies": {},
	"devDependencies": {
		"@commitlint/cli": "^19.4.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@wordpress/eslint-plugin": "^20.2.0",
		"beepbeep": "^1.2.2",

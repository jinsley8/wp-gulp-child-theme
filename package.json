	"description": "WordPress Child Theme boilerplate using Gulp",
	"author": "Jon Insley",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"scss",
		"wordPress",
		"wordPress-theme",
		"theme",
		"gulp"
	],
	"homepage": "https://github.com/jinsley8/wp-gulp-child-theme#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/jinsley8/wp-gulp-child-theme.git"
